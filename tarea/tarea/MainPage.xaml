<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="tarea.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Welcome to Xamarin.Forms!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Entry x:Name="txtn1" Placeholder="Ingrese el primer numero" Keyboard="Telephone" />

        <Entry x:Name="txtn2" Placeholder="Ingrese el segundo numero" Keyboard="Telephone" />

        <Entry x:Name="txtresultado" Placeholder="" Keyboard="Telephone" />

        <Button x:Name="btnsumar" Text="Sumar" Clicked="btnsumar_Clicked"/>

        <Button x:Name="btnresta" Text="Restar" Clicked="btnresta_Clicked"/>

        <Button x:Name="btndividir" Text="Dividir" Clicked="btndividir_Clicked"/>

        <Button x:Name="btnmultiplicacion" Text="Multiplicar" Clicked="btnmultiplicacion_Clicked"/>

        

    </StackLayout>

</ContentPage>
